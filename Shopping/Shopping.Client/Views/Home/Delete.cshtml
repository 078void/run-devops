@model Shopping.Client.Models.Product
@{
    ViewData["Title"] = "刪除商品";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <!-- 警告標題 -->
        <div class="mb-4">
            <h1 class="display-5 text-danger">
                <i class="bi bi-exclamation-triangle-fill"></i> 刪除商品
            </h1>
            <p class="text-muted">您確定要刪除此商品嗎？此操作無法復原。</p>
        </div>

        <!-- 警告提示 -->
        <div class="alert alert-danger border-danger shadow-sm" role="alert">
            <div class="d-flex align-items-center">
                <i class="bi bi-exclamation-octagon-fill fs-1 me-3"></i>
                <div>
                    <h4 class="alert-heading mb-1">警告：即將刪除商品</h4>
                    <p class="mb-0">此操作將永久刪除商品資料，且無法復原。請確認您的操作。</p>
                </div>
            </div>
        </div>

        <!-- 商品資訊卡片 -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">
                    <i class="bi bi-file-earmark-text"></i> 即將刪除的商品資訊
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <!-- 商品圖片 -->
                    <div class="col-md-4 text-center mb-3 mb-md-0">
                        <div class="bg-gradient-primary rounded d-flex align-items-center justify-content-center p-3" style="height: 200px;">
                            @if (!string.IsNullOrEmpty(Model.ImageFile))
                            {
                                <img src="~/images/@Model.ImageFile" alt="@Model.Name" class="img-fluid" style="max-height: 180px; object-fit: contain;" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                            }
                            <div class="text-white" style="@(string.IsNullOrEmpty(Model.ImageFile) ? "display: flex;" : "display: none;") font-size: 4rem;">
                                <i class="bi bi-image"></i>
                            </div>
                        </div>
                    </div>

                    <!-- 商品詳細資訊 -->
                    <div class="col-md-8">
                        <dl class="row mb-0">
                            <dt class="col-sm-4 text-muted">
                                <i class="bi bi-tag"></i> 商品名稱：
                            </dt>
                            <dd class="col-sm-8 fw-bold">@Model.Name</dd>

                            <dt class="col-sm-4 text-muted">
                                <i class="bi bi-bookmark"></i> 商品分類：
                            </dt>
                            <dd class="col-sm-8">
                                @if (!string.IsNullOrEmpty(Model.Category))
                                {
                                    <span class="badge bg-info">@Model.Category</span>
                                }
                                else
                                {
                                    <em class="text-muted">未分類</em>
                                }
                            </dd>

                            <dt class="col-sm-4 text-muted">
                                <i class="bi bi-card-text"></i> 商品描述：
                            </dt>
                            <dd class="col-sm-8">
                                @if (!string.IsNullOrEmpty(Model.Description))
                                {
                                    @Model.Description
                                }
                                else
                                {
                                    <em class="text-muted">無描述</em>
                                }
                            </dd>

                            <dt class="col-sm-4 text-muted">
                                <i class="bi bi-currency-dollar"></i> 商品價格：
                            </dt>
                            <dd class="col-sm-8">
                                <span class="fs-4 text-success fw-bold">@Model.Price.ToString("C")</span>
                            </dd>

                            <dt class="col-sm-4 text-muted">
                                <i class="bi bi-hash"></i> 商品 ID：
                            </dt>
                            <dd class="col-sm-8">
                                <code class="text-muted">@Model.Id</code>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <!-- 刪除確認表單 -->
        <div class="card shadow-sm">
            <div class="card-body p-4">
                <form asp-action="Delete" method="post">
                    @* 暫時移除 anti-forgery token 以解決 Docker 環境問題 *@
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="mb-4 p-3 bg-light rounded">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="confirmDelete" required>
                            <label class="form-check-label" for="confirmDelete">
                                <strong>我了解此操作無法復原，確認要刪除此商品</strong>
                            </label>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info btn-lg">
                            <i class="bi bi-eye"></i> 查看詳情
                        </a>
                        <div class="d-flex gap-2">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="bi bi-x-circle"></i> 取消
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg" id="deleteButton" disabled>
                                <i class="bi bi-trash"></i> 確認刪除
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- 補充說明 -->
        <div class="alert alert-warning mt-3" role="alert">
            <i class="bi bi-info-circle"></i> 
            <strong>提示：</strong>如果您不確定是否要刪除，建議先查看商品詳情或返回列表頁面。
        </div>
    </div>
</div>

<!-- 自訂樣式 -->
<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    
    dl {
        margin-bottom: 0;
    }
    
    dt {
        font-weight: 500;
        padding: 0.5rem 0;
    }
    
    dd {
        padding: 0.5rem 0;
    }
</style>

<!-- JavaScript 處理確認框 -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const checkbox = document.getElementById('confirmDelete');
        const deleteButton = document.getElementById('deleteButton');
        
        checkbox.addEventListener('change', function() {
            deleteButton.disabled = !this.checked;
        });
    });
</script>

<!-- Bootstrap Icons CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">


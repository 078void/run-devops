@model IEnumerable<Shopping.Client.Models.Product>
@{
    ViewData["Title"] = "商品管理";
}

<!-- 頁面標題與新增按鈕 -->
<div class="row mb-4">
    <div class="col-md-8">
        <h1 class="display-4 text-primary">
            <i class="bi bi-bag-check"></i> 商品管理系統
        </h1>
        <p class="lead text-muted">管理您的商品庫存 - 新增、編輯或刪除商品</p>
    </div>
    <div class="col-md-4 text-end d-flex align-items-center justify-content-end">
        <a asp-action="Create" class="btn btn-success btn-lg shadow-sm">
            <i class="bi bi-plus-circle"></i> 新增商品
        </a>
    </div>
</div>

<!-- 商品卡片展示 -->
<div class="row g-4">
    @if (Model != null && Model.Any())
    {
            @foreach (var product in Model)
            {
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 shadow-sm hover-card">
                            <!-- 商品圖片區域 -->
                            <div class="card-img-top bg-gradient-primary d-flex align-items-center justify-content-center" style="height: 200px;">
                                @if (!string.IsNullOrEmpty(product.ImageFile))
                                {
                                        <img src="~/images/@product.ImageFile" alt="@product.Name" class="img-fluid" style="max-height: 180px; object-fit: cover;" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                                }
                                <div class="text-white" style="@(string.IsNullOrEmpty(product.ImageFile) ? "display: flex;" : "display: none;") font-size: 4rem; align-items: center; justify-content: center; height: 100%;">
                                    <i class="bi bi-image"></i>
                                </div>
                            </div>
                    
                            <!-- 商品資訊 -->
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="card-title text-dark fw-bold mb-0">@product.Name</h5>
                                    @if (!string.IsNullOrEmpty(product.Category))
                                    {
                                            <span class="badge bg-info">@product.Category</span>
                                    }
                                </div>
                                <p class="card-text text-muted small">@product.Description</p>
                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <h4 class="text-success mb-0 fw-bold">@product.Price.ToString("C")</h4>
                                </div>
                            </div>
                    
                            <!-- 操作按鈕 -->
                            <div class="card-footer bg-light border-0">
                                <div class="btn-group w-100" role="group">
                                    <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-outline-primary">
                                        <i class="bi bi-eye"></i> 詳情
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-outline-warning">
                                        <i class="bi bi-pencil"></i> 編輯
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-outline-danger">
                                        <i class="bi bi-trash"></i> 刪除
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
            }
    }
    else
    {
            <div class="col-12">
                <div class="alert alert-info text-center py-5">
                    <i class="bi bi-info-circle" style="font-size: 3rem;"></i>
                    <h4 class="mt-3">目前沒有商品</h4>
                    <p>點擊上方的「新增商品」按鈕來加入您的第一個商品！</p>
                    <a asp-action="Create" class="btn btn-primary mt-2">
                        <i class="bi bi-plus-circle"></i> 立即新增
                    </a>
                </div>
            </div>
    }
</div>

<!-- 自訂樣式 -->
<style>
    .hover-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.15) !important;
    }
    
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    
    .card-footer .btn {
        font-size: 0.875rem;
    }
</style>

<!-- Bootstrap Icons CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

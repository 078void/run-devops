@model Shopping.Client.Models.Product
@{
    ViewData["Title"] = "商品詳情";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <!-- 頁面標題 -->
        <div class="mb-4">
            <h1 class="display-5 text-info">
                <i class="bi bi-info-circle"></i> 商品詳情
            </h1>
            <p class="text-muted">查看商品的完整資訊</p>
        </div>

        <!-- 商品詳情卡片 -->
        <div class="card shadow-lg">
            <div class="row g-0">
                <!-- 商品圖片區域 -->
                <div class="col-md-5">
                    <div class="bg-gradient-primary d-flex align-items-center justify-content-center" style="height: 100%; min-height: 400px;">
                        @if (!string.IsNullOrEmpty(Model.ImageFile))
                        {
                            <img src="~/images/@Model.ImageFile" alt="@Model.Name" class="img-fluid p-4" style="max-height: 380px; object-fit: contain;" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                        }
                        <div class="text-white" style="@(string.IsNullOrEmpty(Model.ImageFile) ? "display: flex;" : "display: none;") font-size: 8rem; align-items: center; justify-content: center;">
                            <i class="bi bi-image"></i>
                        </div>
                    </div>
                </div>

                <!-- 商品資訊區域 -->
                <div class="col-md-7">
                    <div class="card-body p-5">
                        <!-- 商品標題與分類 -->
                        <div class="mb-4">
                            <h2 class="card-title display-6 fw-bold text-dark mb-3">@Model.Name</h2>
                            @if (!string.IsNullOrEmpty(Model.Category))
                            {
                                <span class="badge bg-info fs-6 px-3 py-2">
                                    <i class="bi bi-bookmark"></i> @Model.Category
                                </span>
                            }
                        </div>

                        <!-- 商品描述 -->
                        <div class="mb-4">
                            <h5 class="text-muted mb-3">
                                <i class="bi bi-card-text"></i> 商品描述
                            </h5>
                            <p class="lead text-secondary">
                                @if (!string.IsNullOrEmpty(Model.Description))
                                {
                                    @Model.Description
                                }
                                else
                                {
                                    <em class="text-muted">暫無描述</em>
                                }
                            </p>
                        </div>

                        <!-- 商品價格 -->
                        <div class="mb-4 p-4 bg-light rounded">
                            <h5 class="text-muted mb-2">
                                <i class="bi bi-currency-dollar"></i> 商品價格
                            </h5>
                            <h2 class="display-4 text-success fw-bold mb-0">@Model.Price.ToString("C")</h2>
                        </div>

                        <!-- 其他資訊 -->
                        <div class="mb-4">
                            <h5 class="text-muted mb-3">
                                <i class="bi bi-info-square"></i> 其他資訊
                            </h5>
                            <dl class="row">
                                <dt class="col-sm-4 text-muted">商品 ID：</dt>
                                <dd class="col-sm-8">
                                    <code class="text-primary">@Model.Id</code>
                                </dd>
                                
                                <dt class="col-sm-4 text-muted">圖片檔名：</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.ImageFile))
                                    {
                                        <code>@Model.ImageFile</code>
                                    }
                                    else
                                    {
                                        <em class="text-muted">未設定</em>
                                    }
                                </dd>
                            </dl>
                        </div>

                        <!-- 操作按鈕 -->
                        <div class="d-grid gap-2">
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg text-white">
                                    <i class="bi bi-pencil"></i> 編輯商品
                                </a>
                                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-lg">
                                    <i class="bi bi-trash"></i> 刪除商品
                                </a>
                            </div>
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="bi bi-arrow-left"></i> 返回列表
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 自訂樣式 -->
<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    
    .card {
        border: none;
        overflow: hidden;
    }
    
    dl {
        margin-bottom: 0;
    }
    
    dt {
        font-weight: 500;
        padding: 0.5rem 0;
    }
    
    dd {
        padding: 0.5rem 0;
    }
</style>

<!-- Bootstrap Icons CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">




